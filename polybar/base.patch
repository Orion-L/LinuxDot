+fixed-center = true
+
+background = ${colors.background}
+foreground = ${colors.foreground}
+
+line-size = 3
+line-color = #f00
+
+#border-size = 4
+#border-color = #00000000
+
+padding-left = 1
+padding-right = 1
+
+module-margin-left = 1
+module-margin-right = 1
+
+font-0 = Inconsolata:pixelsize=12;1
+font-1 = FontAwesome:pixelsize=12;1
+
+modules-left = bspwm
+modules-center = cpu memory filesystem
+modules-right = backlight alsa wifi-status battery date powermenu
+
+separator = |
+
+tray-position = right
+tray-padding = 0
+tray-maxsize = 20
+
+wm-restack = bspwm
+
+cursor-click = pointer
+cursor-scroll = ns-resize
+
