+
+[colors]
+background = #151718
+foreground = #d6d6d6
+
+urgent = #cd3f45
+highlight = #e6cd69
+highlight2 = #9fca56
+inactive = #6d6d6d
+
+[bar/openboxbar]
+;monitor = ${env:MONITOR:HDMI-1}
+width = 100%
+height = 27
+;offset-x = 1%
+;offset-y = 1%
+radius = 0
+fixed-center = false
+
+background = ${colors.background}
+foreground = ${colors.foreground}
+
+line-size = 3
+line-color = #f00
+
+border-size = 4
+border-color = #00000000
+
+padding-left = 0
+padding-right = 2
+
+module-margin-left = 1
+module-margin-right = 2
+
+;font-0 = fixed:pixelsize=10;1
+;font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
+font-0 = Unifont:pixelsize=12;1
+font-1 = Siji:pixelsize=200;1
+
+modules-left = xwindow
+modules-center = 
+modules-right = filesystem battery date alsa powermenu
+
+tray-position = right
+tray-padding = 2
+;tray-transparent = true
+;tray-background = #0063ff
+
+;wm-restack = bspwm
