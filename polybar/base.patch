+label-focused-underline = ${colors.highlight}
+
+label-occupied = %name%
+label-occupied-foreground = ${colors.inactive}
+label-occupied-underline = ${colors.inactive}
+
+label-urgent = %name%
+label-urgent-foreground = ${colors.urgent}
+#label-urgent-background = ${colors.urgent}
+label-urgent-underline = ${colors.highlight}
+
+label-empty = %name%
+label-empty-foreground = ${colors.inactive}
+
+label-separator = " "
+label-separator-padding = 0
+
+[module/cpu]
+type = internal/cpu
+interval = 1
+format = <label>
+label = %{F#e6cd69}CPU: %{F-}%percentage%%
+
+[module/memory]
+type = internal/memory
+interval = 1
+format = <label>
+label  = %{F#e6cd69}RAM: %{F-}%percentage_used%%
+
+[module/wired-network]
+type = internal/network
+interface = enp0s3
+interval = 1
+format-connected = <label-connected>
+format-disconnected = <label-disconnected>
+
+label-connected = %{F#9fca56} %{F-}%downspeed% %{F#cd3f45} %{F-}%upspeed%
+label-connected-foreground = ${colors.foreground}
+
+label-disconnected = eth down
+label-disconnected-foreground = ${colors.urgent}
+
+[module/wifi-network]
+type = internal/network
+interface = wlp1s0 
+interval = 1
+format-connected = <label-connected>
+format-disconnected = <label-disconnected>
+
+label-connected = %{F#9fca56} %{F-}%downspeed% %{F#cd3f45} %{F-}%upspeed%
+label-connected-foreground = ${colors.foreground}
+
+label-disconnected = wifi down
+label-disconnected-foreground = ${colors.urgent}
+
+[module/wifi-status]
+type = internal/network
+interface = wlp1s0
+interval = 5
+
+format-connected = %{A1:termite -e nmtui:}<label-connected>%{A}
+format-disconnected = %{A1:termite -e nmtui:}<label-disconnected>%{A}
+
+label-connected = %{F#9fca56} %{F-}%downspeed%
+label-connected-foreground = ${colors.foreground}
+
+label-disconnected =  wifi down
+label-disconnected-foreground = ${colors.urgent}
+
+[module/xwindow]
+type = internal/xwindow
+label = %title:0:30:...%
+
+[module/filesystem]
+type = internal/fs
+interval = 25
+
+mount-0 = /
+mount-1 = /home
+
+label-mounted = %{F#55d5db}%mountpoint%%{F-}: %free%
+label-unmounted =
+
+[module/date]
+type = internal/date
+interval = 5
+
+time = %H:%M
+date = %d/%m/%y
+label = %time% %date%
+
+[module/alsa]
+type = internal/alsa
+mapped = true
+interval = 1
+
+master-mixer = Master
+
+format-volume = <ramp-volume> <label-volume>
+format_muted = <label-muted>
+
+label-volume = %percentage%%
+
+ramp-volume-0 = 
+ramp-volume-1 = 
+ramp-volume-2 = 
+
+label-muted = 
+label-muted-foreground = ${colors.urgent}
+
+[module/backlight]
+type = internal/backlight
+card = amdgpu_bl0
+
+format = <ramp> <label>
+label = %percentage%%
+
+ramp-0 = 
+ramp-1 = 
+ramp-2 = 
+
+[module/battery]
+type = internal/battery
+battery = BAT0
+adapter = AC
+full-at = 98
+time-format = %H:%M
+
+format-charging = <label-charging>
+format-discharging = <ramp-capacity> <label-discharging>
+format-full = <ramp-capacity> <label-full>
+
+label-charging = %{F#9fca56} %{F-}%percentage%%
+label-discharging = %percentage%%
+label-full = %percentage%%
+
+ramp-capacity-0 = 
+ramp-capacity-0-foreground = ${colors.urgent}
+ramp-capacity-1 = 
+ramp-capacity-1-foreground = ${colors.highlight}
+ramp-capacity-2 = 
+ramp-capacity-2-foreground = ${colors.highlight}
+ramp-capacity-3 = 
+ramp-capacity-3-foreground = ${colors.highlight2}
+ramp-capacity-4 = 
+ramp-capacity-4-foreground = ${colors.highlight2}
+
+[module/powermenu]
+type = custom/menu
+
+expand-right = true
+
+format-spacing = 1
+
+label-open = 
+label-open-foreground = ${colors.urgent}
+label-close = 
+label-close-foreground = ${colors.urgent}
+label-separator = |
+label-separator-foreground = ${colors.inactive}
+
+menu-0-0 = suspend
+menu-0-0-exec = systemctl suspend
+menu-0-1 = reboot
+menu-0-1-exec = reboot
+menu-0-2 = power off
+menu-0-2-exec = shutdown now
+
+[settings]
+screenchange-reload = true
+;compositing-background = xor
+;compositing-background = screen
+;compositing-foreground = source
+;compositing-border = over
+
+[global/wm]
+margin-top = 5
+margin-bottom = 5
+
+; vim:ft=dosini
