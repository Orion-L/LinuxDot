[colors]
background = #151718
foreground = #d6d6d6

urgent = #cd3f45
highlight = #e6cd69
inactive = #6d6d6d

[bar/openboxbar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

;font-0 = fixed:pixelsize=10;1
;font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-0 = Unifont:pixelsize=12;1
font-1 = Siji:pixelsize=200;1

modules-left = xwindow
modules-center = 
modules-right = filesystem battery date alsa powermenu

tray-position = right
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[bar/bspwmvmbar]
monitor = VGA-1

width = 100%
height = 27
radius = 0
#offset-x = 1%
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

#border-size = 4
#border-color = #00000000

padding-left = 1
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Inconsolata:pixelsize=12;1
font-1 = FontAwesome:pixelsize=12;1

modules-left = bspwm
modules-center = cpu memory wired-network filesystem
modules-right = date powermenu

separator = |

tray-position = right
tray-padding = 1
tray-maxsize = 2000

#wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm

pin-workspaces = true
inline-mode = false
enable-click = true
enable-scroll = false
reverse-scroll = false
fuzzy-match = true

label-focused = %name%
label-focused-foreground = ${colors.foreground}
#label-focused-background = #3f3f3f
label-focused-underline = ${colors.highlight}

label-occupied = %name%
label-occupied-foreground = ${colors.inactive}
label-occupied-underline = ${colors.inactive}

label-urgent = %name%
label-urgent-foreground = ${colors.urgent}
#label-urgent-background = ${colors.urgent}
label-urgent-underline = ${colors.highlight}

label-empty =
label-empty-foreground = ${colors.inactive}

label-separator = " "
label-separator-padding = 0

[module/cpu]
type = internal/cpu
interval = 1
format = <label>
label = %{F#e6cd69}CPU: %{F-}%percentage%%

[module/memory]
type = internal/memory
interval = 1
format = <label>
label  = %{F#e6cd69}RAM: %{F-}%percentage_used%%

[module/wired-network]
type = internal/network
interface = enp0s3
interval = 1
format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = %{F#9fca56} %{F-}%downspeed% %{F#cd3f45} %{F-}%upspeed%
label-connected-foreground = ${colors.foreground}

label-disconnected = eth down
label-disconnected-foreground = ${colors.urgent}

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home

label-mounted = %{F#55d5db}%mountpoint%%{F-}: %free%
label-unmounted =

[module/date]
type = internal/date
interval = 5

time = %H:%M
date = %d/%m/%y
label = %time% %date%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = 🔇 muted
label-muted-foreground = #666

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.inactive}

[module/alsa]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.inactive}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.inactive}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging =  <label-charging>
format-charging-underline = #ffb52a

format-discharging =  <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full = ""
format-full-underline = ${self.format-charging-underline}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.urgent}
label-close =  cancel
label-close-foreground = ${colors.urgent}
label-separator = |
label-separator-foreground = ${colors.inactive}

menu-0-0 = reboot
menu-0-0-exec = reboot
menu-0-1 = power off
menu-0-1-exec = shutdown now

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

